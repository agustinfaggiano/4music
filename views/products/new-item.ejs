<!DOCTYPE html>
<html lang="es">
<%-include("../partials/head.ejs", {title: 'Publicar nuevo producto'})%>

<body class="fourMusic">
    
    <%-include("../partials/header.ejs")%>

    <main>
        <div class="contenedorMain">
            <div class="formulario">         
                <h2 class="bienvenida">Publicar Nuevo Producto</h2>
                <form id="publicarProducto" action="/products" method="POST" enctype="multipart/form-data" >
                    <div class="lineaForm">
                        <label for="titulo">Título del Aviso</label>
                        <% if(locals.errors && errors.titulo) { %>
                            <p style="color: red;"><%= errors.titulo.msg %></p>
                        <% } %>
                        <input type="text" placeholder="Ej: Fender" name="titulo" id="titulo" required  minlength="2" maxlength="25">     
                    </div>
                    <div class="lineaForm">
                        <label for="marca">Marca</label>
                        <input type="text" placeholder="Ej: Fender" name="marca" id="marca" required  minlength="2" maxlength="25">     
                    </div>
                    <div class="lineaForm">
                        <label for="modelo">Modelo</label>
                        <input type="text" name="modelo" id="modelo" placeholder="Ej: Stratocaster" required  minlength="2" maxlength="30">    
                    </div>
                    <div class="lineaForm">
                        <label for="precio">Precio: $</label>
                        <input type="text" name="precio" id="precio" required>    
                    </div>
                    <div class="lineaForm"> 
                        <label for="categoria">Categoría</label>

                        <select name="categoria">
                        <% for (let i = 0; i < categoria.length; i++) {%>
                            <option value="<%=categoria[i].id%>"><%=categoria[i].nombre%></option>
                            <% } %>
                        </select>
                        
                    </div>
                    <div class="lineaForm">
                        <label for="descripcion">Descripción</label>
                       <textarea class="areaTexto" required name="descripcion"  minlength="5" maxlength="400">
                       </textarea>   
                    </div>
                    <div class="lineaForm">
                        <label for="imagenes">Imágenes</label>
                        <input type="file" name="imagenes" accept="image/png, image/gif, image/jpeg" required/>
                    </div>
                    <br>
                    <div class="lineaForm">
                        <label for="generoMusical">Seleccione el Género Musical correspondiente</label>

                        <select name="generoMusical">
                        <% for (let g = 0; g < genero.length; g++) {%>
                        
                            <option value="<%=genero[g].id%>"><%=genero[g].nombre%></option>
                            

                            <% } %>
                        </select> 
                    </div>
                    <div class="lineaForm">
                        <label for="precio">Cantidad Disponible</label>
                        <input type="text" name="stock" id="stock" placeholder="Ingresá el Stock" required>    
                    </div>
                    <div class="lineaForm"> 
                        <a href="/users/profile">
                            <button type="button" class="boton-registro">Volver</button>
                        </a>
                    </div>
                    <div class="lineaForm">
                        <button type="submit" class="boton-registro">Publicar Artículo</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
    
    <%-include("../partials/footer.ejs")%>

 
</body>
</html>