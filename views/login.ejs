<!DOCTYPE html>
<html lang="es">
<%-include("partials/head.ejs", {title: 'Login'})%>


<body class="fourMusic">
   
    <%-include("partials/header.ejs")%>

    <main>
        <div class="contenedorMain">
            <div class="formulario">         
                <h2 class="bienvenida">Bienvenido a 4Music!</h2>
                <form id="ingresar" action="/users/profile" method="GET" >
                    <div class="lineaForm">
                        <label for="email">Correo Electrónico:</label>
                        <input type="email" name="email" id="email" required  minlength="6" maxlength="25">     
                    </div>
                    <div class="lineaForm">
                        <label for="contraseña">Contraseña:</label>
                        <input type="password" name="contraseña" id="contraseña"required minlength="6" maxlength="15">    
                    </div>
                    <div class="lineaForm"> 
                        <a href="">Olvidaste tu contaseña?</a>
                    </div>
                    <div class="lineaForm"> 
                        <button type="submit" class="boton-registro">Ingresar</button>
                    </div>
                    <div class="lineaForm"> 
                        <input type="checkbox" class="check" name="recibir-ofertas">Permanecer conectado
                    </div>
                    <div class="lineaForm"> 
                        <a href="/users/register">No tenés cuenta?</a>
                    </div>
                    <div class="lineaForm"> 
                        <a href="/users/register"><button type="button" class="boton-registro">Crea tu cuenta</button></a>
                    </div>
                </form>
            </div>
        </div>
    </main>
    

    <%-include("partials/footer")%>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>